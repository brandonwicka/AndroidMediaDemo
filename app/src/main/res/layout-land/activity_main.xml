<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    tools:context="edu.ucsb.cs.cs190i.brandonwicka.demosuite.MainActivity">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/speechToText"
        android:layout_weight="1"

        android:id="@+id/speech_to_text_button"

        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/textToSpeech"
        android:layout_weight="1"

        android:id="@+id/text_to_speech_button"
        android:layout_below="@id/speech_to_text_button"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_weight="1"

        android:text="@string/audio"
        android:id="@+id/audio_button"
        android:layout_below="@id/text_to_speech_button"

        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_weight="1"

        android:text="@string/video"
        android:id="@+id/video_button"
        android:layout_below="@id/audio_button"

        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/animation"
        android:layout_weight="1"
        android:id="@+id/animation_button"
        android:layout_below="@id/video_button"

        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/text_to_speech_button"
        android:layout_marginLeft="6dp"
        android:id="@+id/frame_layout"
        >

    </FrameLayout>

</RelativeLayout>
